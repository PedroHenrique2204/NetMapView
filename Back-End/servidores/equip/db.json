-- Criar a tabela 'hosts'
CREATE TABLE hosts (
    id VARCHAR(10) PRIMARY KEY,
    name VARCHAR(100),
    ip VARCHAR(15),
    type VARCHAR(50),
    location VARCHAR(50),
    status BOOLEAN,
    description TEXT
);

